# Uncomment this line to define a global platform for your project
platform :ios, '15.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    if target.name == 'BoringSSL-GRPC'
      target.source_build_phase.files.each do |file|
        next unless file.settings && file.settings['COMPILER_FLAGS']
        flags = file.settings['COMPILER_FLAGS'].split(/\s+/)
        flags = flags.reject { |f| f.include?('GCC_WARN_INHIBIT_ALL_WARNINGS') }
        file.settings['COMPILER_FLAGS'] = flags.join(' ')
      end
    end
    if ['gRPC-Core', 'gRPC-C++'].include?(target.name)
      begin
        ['Pods/gRPC-Core/src/core/lib/promise/detail/basic_seq.h',
         'Pods/gRPC-C++/src/core/lib/promise/detail/basic_seq.h'].each do |path|
          next unless File.exist?(path)
          contents = File.read(path)
          patched = contents.gsub('Traits::template CallSeqFactory(f_, *cur_, std::move(arg))',
                                  'Traits::CallSeqFactory(f_, *cur_, std::move(arg))')
          patched = patched.gsub('Traits::template CallSeqFactory<>(f_, *cur_, std::move(arg))',
                                 'Traits::CallSeqFactory<>(f_, *cur_, std::move(arg))')
          if patched != contents
            File.write(path, patched)
          end
        end
      rescue
      end
    end
    target.build_configurations.each do |config|
      # Configuração mínima do iOS
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
      
      # ============================================================
      # COMPREHENSIVE WARNING SUPPRESSION FOR ALL PODS
      # This is necessary because many dependencies use deprecated
      # iOS 18 APIs (StoreKit, etc) that are warnings in Xcode 16+
      # ============================================================
      
      # Disable Warnings as Errors for GCC/Clang
      config.build_settings['GCC_TREAT_WARNINGS_AS_ERRORS'] = 'NO'
      config.build_settings['CLANG_WARN_QUOTED_INCLUDE_IN_FRAMEWORK_HEADER'] = 'NO'
      config.build_settings['GCC_WARN_INHIBIT_ALL_WARNINGS'] = 'YES'
      
      # Disable Warnings as Errors for Swift
      config.build_settings['SWIFT_TREAT_WARNINGS_AS_ERRORS'] = 'NO'
      config.build_settings['SWIFT_SUPPRESS_WARNINGS'] = 'YES'
      
      # Set Swift language version and disable strict concurrency checks
      config.build_settings['SWIFT_VERSION'] = '5.0'
      config.build_settings['SWIFT_STRICT_CONCURRENCY'] = 'minimal'
      
      # Disable deprecated API warnings
      config.build_settings['GCC_WARN_ABOUT_DEPRECATED_FUNCTIONS'] = 'NO'
      config.build_settings['CLANG_WARN_DEPRECATED_OBJC_IMPLEMENTATIONS'] = 'NO'
      
      # Add warning flags to OTHER_CFLAGS and OTHER_SWIFT_FLAGS
      other_cflags = config.build_settings['OTHER_CFLAGS'] || '$(inherited)'
      config.build_settings['OTHER_CFLAGS'] = "#{other_cflags} -w -Wno-deprecated-declarations"
      
      other_swift_flags = config.build_settings['OTHER_SWIFT_FLAGS'] || '$(inherited)'
      config.build_settings['OTHER_SWIFT_FLAGS'] = "#{other_swift_flags} -suppress-warnings"
      
      config.build_settings['ONLY_ACTIVE_ARCH'] = 'YES'
      config.build_settings['VALID_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'i386 x86_64'
      # Speed-ups: disable index store and enable wholemodule for Swift
      config.build_settings['COMPILER_INDEX_STORE_ENABLE'] = 'NO'
      config.build_settings['SWIFT_WHOLE_MODULE_OPTIMIZATION'] = 'YES'
      # Sanitizar flags inválidas (ex.: "-GCC_WARN_INHIBIT_ALL_WARNINGS") em quaisquer chaves de OTHER_*FLAGS (inclusive condicionais)
      keys = config.build_settings.keys.grep(/^OTHER_C(PLUSPLUS)?FLAGS/) + ['OTHER_CFLAGS','OTHER_CPLUSPLUSFLAGS']
      keys.uniq.each do |key|
        flags = config.build_settings[key]
        next if flags.nil?
        list = flags.is_a?(String) ? flags.split(' ') : Array(flags).map(&:to_s)
        filtered = list.reject { |f| f.strip == '-GCC_WARN_INHIBIT_ALL_WARNINGS' || f.strip == 'GCC_WARN_INHIBIT_ALL_WARNINGS' || f.strip.start_with?('-GCC_WARN_INHIBIT_ALL_WARNINGS') }
        filtered = (['$(inherited)'] + filtered).uniq
        config.build_settings[key] = filtered
      end

      xcref = config.base_configuration_reference
      if xcref
        path = xcref.real_path.to_s
        if File.exist?(path)
          data = File.read(path)
          data = data.gsub(/^OTHER_CFLAGS(\[.*\])?\s*=\s*(.*)$/) do
            lhs = Regexp.last_match(1) ? "OTHER_CFLAGS#{Regexp.last_match(1)}" : 'OTHER_CFLAGS'
            rhs = Regexp.last_match(2)
            tokens = rhs.split(/\s+/)
            tokens = tokens.reject { |t| t.strip == '-GCC_WARN_INHIBIT_ALL_WARNINGS' || t.strip == 'GCC_WARN_INHIBIT_ALL_WARNINGS' || t.strip.start_with?('-GCC_WARN_INHIBIT_ALL_WARNINGS') }
            "#{lhs} = #{tokens.join(' ')}"
          end
          data = data.gsub(/^OTHER_CPLUSPLUSFLAGS(\[.*\])?\s*=\s*(.*)$/) do
            lhs = Regexp.last_match(1) ? "OTHER_CPLUSPLUSFLAGS#{Regexp.last_match(1)}" : 'OTHER_CPLUSPLUSFLAGS'
            rhs = Regexp.last_match(2)
            tokens = rhs.split(/\s+/)
            tokens = tokens.reject { |t| t.strip == '-GCC_WARN_INHIBIT_ALL_WARNINGS' || t.strip == 'GCC_WARN_INHIBIT_ALL_WARNINGS' || t.strip.start_with?('-GCC_WARN_INHIBIT_ALL_WARNINGS') }
            "#{lhs} = #{tokens.join(' ')}"
          end
          File.write(path, data)
        end
      end

      begin
        Dir.glob('Pods/Target Support Files/**/*.xcconfig').each do |xc|
          data = File.read(xc)
          data = data.gsub(/(^|\s)-GCC_WARN_INHIBIT_ALL_WARNINGS(\s|$)/, ' ')
          data = data.gsub(/^OTHER_CFLAGS(\[.*\])?\s*=\s*(.*)$/) do
            lhs = Regexp.last_match(1) ? "OTHER_CFLAGS#{Regexp.last_match(1)}" : 'OTHER_CFLAGS'
            rhs = Regexp.last_match(2)
            tokens = rhs.split(/\s+/)
            tokens = tokens.reject { |t| t.strip == '-GCC_WARN_INHIBIT_ALL_WARNINGS' || t.strip == 'GCC_WARN_INHIBIT_ALL_WARNINGS' || t.strip.start_with?('-GCC_WARN_INHIBIT_ALL_WARNINGS') }
            "#{lhs} = #{tokens.join(' ')}"
          end
          data = data.gsub(/^OTHER_CPLUSPLUSFLAGS(\[.*\])?\s*=\s*(.*)$/) do
            lhs = Regexp.last_match(1) ? "OTHER_CPLUSPLUSFLAGS#{Regexp.last_match(1)}" : 'OTHER_CPLUSPLUSFLAGS'
            rhs = Regexp.last_match(2)
            tokens = rhs.split(/\s+/)
            tokens = tokens.reject { |t| t.strip == '-GCC_WARN_INHIBIT_ALL_WARNINGS' || t.strip == 'GCC_WARN_INHIBIT_ALL_WARNINGS' || t.strip.start_with?('-GCC_WARN_INHIBIT_ALL_WARNINGS') }
            "#{lhs} = #{tokens.join(' ')}"
          end
          File.write(xc, data)
        end
      rescue
      end
    end
  end
end
